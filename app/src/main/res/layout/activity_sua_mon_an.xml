<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="company.luongchung.camnangamthuc.company.huynhduc.camnangamthuc.ThemMonAn"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_MonAN"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/image_null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Tên món ăn:"
                android:textSize="18dp"
                android:textColor="@color/Campfire_Do"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTenMonAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:hint="Mời bạn nhập tên món ăn." />

            <LinearLayout
                android:layout_width="291dp"
                android:layout_height="48dp"
                android:layout_marginLeft="3dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ChonAnh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chọn ảnh"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <Button
                    android:id="@+id/btn_ChupAnh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chụp ảnh"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:text="Nguyên liệu chế biến:"
        android:layout_marginTop="15dp"
        android:textColor="@color/Campfire_Do"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtNguyenLieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint=" Nhập nguyên liệu chế biến."
         />
    <TextView
        android:text="Cách chế biến:"
        android:layout_marginTop="10dp"
        android:textColor="@color/Campfire_Do"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtCachCheBien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="top"
        android:hint="Nhập cách chế biến." />

    <Button
        android:id="@+id/btnSuaMonAn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XÁC NHẬN SỬA"
        android:textColor="#ffff"
        android:background="@color/colorPrimary"/>
</LinearLayout>
